<h2>All clients:</h2>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
}

@if (Model.Count != 0)
{
    <ul>
    @foreach (var client in Model)
    {
        <li><a href='/clients/@client.GetId()'>@client.GetName()</a></li>
    }
    </ul>
}

<h3><a href='/clients/delete'>Delete all clients</a></h3>
