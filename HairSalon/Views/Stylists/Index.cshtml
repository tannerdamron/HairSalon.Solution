<h1>Stylists</h1>
<h3>Click on a stylist's name to see or add clients</h3>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
}

@foreach (var stylist in Model)
{
  <h3><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h3>
}

<h3><a href='/stylists/new'>Add a new stylist</a></h3>
<p><a href='/'>Back to home page</a></p>