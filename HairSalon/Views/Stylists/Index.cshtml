<h2>Click on a stylist's name to see or add clients</h2>
<h1>Stylists</h1>
@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
}

@foreach (var stylist in Model)
{
  <h2><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h2>
}

<h3><a href='/stylists/new'>Add a new stylist</a></h3>
<h3><a href='/stylists/delete'>Delete all stylists</a></h3>
<h3><a href='/clients'>View all clients</a></h3>
<p><a href='/'>Back to home page</a></p>